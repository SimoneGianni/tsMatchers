{
    "compilerOptions": {
        "lib": ["es2017","dom"],
        "declaration": true,
        "removeComments": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "sourceMap": true,
        "target": "es5",
        "outDir": "js"
    },
    "include": ["./src/**/*.ts"],
    "exclude": [
        "**/__tests__/*",
        "node_modules/**/*",
        ".vscode/**/*"
    ]
}
